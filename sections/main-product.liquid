<style>
  .splide__pagination {
    right:-20px !important;
    padding-top:0 !important;
    padding-bottom:0 !important;
  }

  .product-desc {
    padding-left:20px
  }

  @media screen and (max-width:490px) {
    .splide__pagination {
      right:-3px !important;
    }
  }

  @media screen and (max-width:767px) {
   
  .product-desc {
    padding-left:0
  }
  }

  .splide__pagination__page {
    height:100%;
    border-radius:0;
    width:2px;
    background:#C1C1C1;
    transition:unset;
  }

  .splide__pagination__page.is-active {
    background:#0E0E0E;
    transform:unset;
  }

  .splide__pagination li {
    flex-grow:1
  }

  .custom-button {
    background: #0E0E0E;
    color:white;
    box-shadow:none;
    border:none;
    width:100%;
    padding-top:6px;
    padding-bottom:6px;
    min-height: unset;
